<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RecetaActivity"
    tools:showIn="@layout/activity_receta"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ToolbarTheme"
        android:id="@+id/toolbar2">

    </android.support.v7.widget.Toolbar>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagereceta"
            android:layout_width="match_parent"
            android:layout_height="348dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:elevation="16dp"
            android:fitsSystemWindows="true" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_gravity="center"
        android:fontFamily="monospace"
        android:layout_marginTop="8dp"
        android:text="Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="18sp"
        android:textStyle="bold" />
    <View
        style="@style/Divider"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        />

    <TextView
        android:id="@+id/tvserve"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="monospace"
        android:text="Instructions to serve"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        />

    <View
        style="@style/Divider"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        />

    <TextView
        android:id="@+id/receta"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="#000"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvingtitol"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="monospace"
        android:text="Ingredients for preparation "
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        />

    <View
        style="@style/Divider"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
     />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/ingredient1"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="fill_parent"
            android:textColor="#000"
            android:layout_height="fill_parent"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="monospace"
            android:text="TextView" />

        <TextView
            android:id="@+id/mesure1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="monospace"
            android:text="TextView" />




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/ingredient2"
            android:layout_width="fill_parent"
            android:gravity="center_vertical|center_horizontal"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:textColor="#000"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="monospace"
            android:text="TextView" />
        <TextView
            android:id="@+id/mesure2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="monospace"
            android:text="TextView" />

    </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent">


             <TextView
                 android:id="@+id/ingredient3"
                 android:layout_width="fill_parent"
                 android:layout_weight="1"
                 android:textColor="#000"
                 android:textAlignment="center"
                 android:gravity="center"
                 android:layout_height="fill_parent"
                 android:layout_marginStart="8dp"
                 android:layout_marginTop="8dp"
                 android:layout_marginEnd="8dp"
                 android:layout_marginBottom="8dp"
                 android:fontFamily="monospace"
                 android:text="TextView" />

        <TextView
            android:id="@+id/mesure3"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_height="fill_parent"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="monospace"
            android:text="TextView" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
   >

        <TextView
            android:id="@+id/ingredient4"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_height="fill_parent"
            android:layout_marginStart="8dp"
            android:textColor="#000"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="monospace"
            android:text="TextView" />
        <TextView
            android:id="@+id/mesure4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="monospace"
            android:text="TextView" />




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp">


        <TextView
            android:id="@+id/ingredient5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:textColor="#000"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="monospace"
            android:text="TextView" />

        <TextView
            android:id="@+id/mesure5"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:layout_marginBottom="8dp"
            android:fontFamily="monospace"
            android:text="TextView" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/ingredient6"
            android:textColor="#000"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="monospace"
            android:text="TextView" />

        <TextView
            android:id="@+id/mesure6"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginBottom="8dp"
            android:fontFamily="monospace"
            android:text="TextView" />
    </LinearLayout>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>
</LinearLayout>